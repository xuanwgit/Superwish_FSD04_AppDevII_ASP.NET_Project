@page
@model Superwish_FSD04_AppDevII_ASP.NET_Project.Pages.ItemsModel
@{
    ViewData["Title"] = "Items";
}

<div class="container mt-4">
    <h1 class="mb-4">@(string.IsNullOrEmpty(Model.CategoryName) ? "All Items" : Model.CategoryName)</h1>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            <h4>No items found</h4>
            <p>There are no items available in this category. Please check back later.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model.Items)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">
                                <strong>Price: $@item.Price.ToString("F2")</strong>
                                <span class="badge bg-success ms-2">In Stock: @item.QuantityRemaining</span>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="/ItemDetails/@item.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 