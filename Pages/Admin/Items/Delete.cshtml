@page "{id:int}"
@model Superwish_FSD04_AppDevII_ASP.NET_Project.Pages.Admin.Items.DeleteModel
@{
    ViewData["Title"] = "Delete Item";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Confirm Delete
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this item?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <img src="@(string.IsNullOrEmpty(Model.Item.ImageUrl) ? "https://via.placeholder.com/200" : Model.Item.ImageUrl)" 
                                 class="img-fluid rounded" 
                                 alt="@Model.Item.Name" />
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Item.Name</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">@(Model.Item.Category?.Name ?? "No Category")</dd>

                                <dt class="col-sm-4">Price</dt>
                                <dd class="col-sm-8">@Model.Item.Price.ToString("C")</dd>

                                <dt class="col-sm-4">Stock Level</dt>
                                <dd class="col-sm-8">@Model.Item.QuantityRemaining</dd>
                            </dl>
                            <p class="text-muted">@Model.Item.Description</p>
                        </div>
                    </div>

                    @if (Model.HasOrders)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle-fill me-2"></i>
                            <strong>Warning:</strong> This item has associated orders. Deleting it may affect order history.
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Item.Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
