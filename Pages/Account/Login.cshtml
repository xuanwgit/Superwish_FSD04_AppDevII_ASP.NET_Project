@page
@model Superwish_FSD04_AppDevII_ASP.NET_Project.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card p-4 mt-4">
            <h2 class="text-center mb-4">Welcome Back</h2>
            <p class="text-center text-muted mb-4">Please log in to your account</p>
            
            <form method="post">
                @if (!ModelState.IsValid && ViewContext.HttpContext.Request.Method == "POST")
                {
                    <div class="alert alert-danger">
                        Invalid login attempt. Please check your email and password.
                    </div>
                }
                
                <div class="form-group mb-3">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary w-100">Log in</button>
                </div>
                
                <div class="text-center">
                    <p>
                        Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register here</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 