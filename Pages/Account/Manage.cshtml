@page
@model Superwish_FSD04_AppDevII_ASP.NET_Project.Pages.Account.ManageModel
@{
    ViewData["Title"] = "My Account";
}

<div class="account-container">
    <div class="account-box">
        <h1 class="account-title">My Account</h1>
        
        <div class="account-section">
            <h2>Account Information</h2>
            <div class="info-group">
                <label>Email</label>
                <p>@Model.Email</p>
            </div>
            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
            {
                <div class="info-group">
                    <label>Phone Number</label>
                    <p>@Model.PhoneNumber</p>
                </div>
            }
        </div>

        @if (Model.IsRegisteredUser)
        {
            <div class="account-section">
                <h2>Account Actions</h2>
                <div class="action-buttons">
                    @if (Model.HasPassword)
                    {
                        <a href="/Account/ChangePassword" class="btn btn-secondary">Change Password</a>
                    }
                    <a href="/Orders" class="btn btn-secondary">View Orders</a>
                    <a href="/Addresses" class="btn btn-secondary">Manage Addresses</a>
                </div>
            </div>
        }

        @if (Model.IsAdmin)
        {
            <div class="account-section">
                <h2>Admin Actions</h2>
                <div class="action-buttons">
                    <a href="/Admin/Categories" class="btn btn-secondary">Manage Categories</a>
                    <a href="/Admin/Items" class="btn btn-secondary">Manage Items</a>
                    <a href="/Admin/Orders" class="btn btn-secondary">View All Orders</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .account-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 70vh;
        padding: 2rem;
    }

    .account-box {
        background-color: var(--background-color);
        border: 1px solid var(--border-color);
        border-radius: 4px;
        padding: 2.5rem;
        width: 100%;
        max-width: 600px;
    }

    .account-title {
        color: var(--text-color);
        font-size: 24px;
        font-weight: 300;
        margin-bottom: 2rem;
        text-align: center;
    }

    .account-section {
        margin-bottom: 2rem;
    }

    .account-section h2 {
        color: var(--text-color);
        font-size: 18px;
        font-weight: 400;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .info-group {
        margin-bottom: 1rem;
    }

    .info-group label {
        display: block;
        color: var(--secondary-text);
        font-size: 14px;
        margin-bottom: 0.5rem;
    }

    .info-group p {
        color: var(--text-color);
        font-size: 16px;
        margin: 0;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-secondary {
        background-color: var(--background-color);
        border: 1px solid var(--accent-color);
        color: var(--text-color);
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        font-size: 14px;
        text-align: center;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .btn-secondary:hover {
        background-color: var(--accent-color);
        color: white;
        text-decoration: none;
    }
</style> 